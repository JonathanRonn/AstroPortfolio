---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'IBM Plex Serif';
    --aw-font-serif: 'IBM Plex Serif';
    --aw-font-heading: 'IBM Plex Serif';

    /* Professional color palette */
    --aw-color-primary: rgb(38, 84, 124);     /* Deep blue */
    --aw-color-secondary: rgb(71, 125, 170);  /* Medium blue */
    --aw-color-accent: rgb(189, 126, 74);     /* Warm accent */

    --aw-color-text-heading: rgb(40, 44, 52);
    --aw-color-text-default: rgb(66, 66, 66);
    --aw-color-text-muted: rgb(112, 112, 112);
    --aw-color-text-link: rgb(38, 84, 124);   /* Match primary color */
    --aw-color-bg-page: rgb(250, 250, 250);   /* Slightly off-white */

    --aw-color-bg-page-dark: rgb(26, 32, 44);

    ::selection {
      background-color: rgb(213, 226, 235);
      color: rgb(38, 84, 124);
    }
  }

  .dark {
    --aw-font-sans: 'IBM Plex Serif';
    --aw-font-serif: 'IBM Plex Serif';
    --aw-font-heading: 'IBM Plex Serif';

    /* Dark mode professional color palette */
    --aw-color-primary: rgb(98, 152, 199);    /* Lighter blue */
    --aw-color-secondary: rgb(71, 125, 170);  /* Medium blue */
    --aw-color-accent: rgb(217, 164, 116);    /* Warmer accent for dark mode */

    --aw-color-text-heading: rgb(237, 240, 245);
    --aw-color-text-default: rgb(214, 222, 235);
    --aw-color-text-muted: rgb(173, 186, 199);
    --aw-color-text-link: rgb(152, 187, 213); /* Lighter blue for links in dark mode */
    --aw-color-bg-page: rgb(26, 32, 44);      /* Dark blue-gray */

    ::selection {
      background-color: rgb(38, 84, 124);
      color: rgb(237, 240, 245);
    }
  }
</style>
