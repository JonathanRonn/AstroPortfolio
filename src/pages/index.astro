---
import Layout from '~/layouts/PageLayout.astro';

import IDEHero from '~/components/widgets/IDEHero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Jonathan Ronn - Software Developer Portfolio',
  description: 'Jonathan Ronn is a software developer specializing in creating efficient, user-friendly web applications and solutions. View projects and get in touch for collaboration opportunities.',
  ignoreTitleTemplate: true,
  openGraph: {
    title: 'Jonathan Ronn - Software Developer Portfolio',
    description: 'Explore my projects and skills as a software developer. I build efficient, user-friendly web applications with modern technologies.',
    images: [
      {
        url: '~/assets/images/jon-hero.png',
        width: 1200,
        height: 628,
      },
    ],
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <IDEHero 
    title="Jonathan Ronn"
    subtitle="Welcome to my portfolio! Thanks for stopping by. I'm a software developer passionate about building efficient, user-friendly solutions. Feel free to explore my projects to see what I've been working on, and don't hesitate to reach out if you'd like to connect or collaborate."
    class="py-12 md:py-20"
  />

  <!-- TODO: add skills section -->

  <BlogLatestPosts
    title="See my Blog"
  />

</Layout>
